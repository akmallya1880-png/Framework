            //    switch (browser.ToLower())
            //    {
            //        case "edge":
            //            driver = new EdgeDriver();
            //            break;
            //       default :
            //            driver = new ChromeDriver();
            //            break;
            //    }

            //    driver.Manage().Window.Maximize();
            //    driver.Manage().Timeouts().ImplicitWait=TimeSpan.FromSeconds(10);
            //   return driver;



        }
    }
}
